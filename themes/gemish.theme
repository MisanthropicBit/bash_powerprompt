#!/usr/bin/env bash

__bpp_set_theme() {
    BASH_POWERPROMPT_THEME='gemish'
    BASH_POWERPROMPT_COLOR_FORMAT=$BASH_POWERPROMPT_COLOR_FORMAT_256
    BASH_POWERPROMPT_FG_COLORS=(15 15 15)
    BASH_POWERPROMPT_BG_COLORS=(160 160 160)
    BASH_POWERPROMPT_SEPARATOR_FG_COLORS=(218 218 160)
    BASH_POWERPROMPT_SEPARATOR_BG_COLORS=(160 160 160)
    BASH_POWERPROMPT_SEPARATORS=(
        $BASH_POWERPROMPT_THIN_ARROW_SYMBOL
        $BASH_POWERPROMPT_THIN_ARROW_SYMBOL
        $BASH_POWERPROMPT_SOLID_ARROW_SYMBOL
    )

    local gem_symbol=$(printf "\xf0\x9f\x92\x8e") # Diamond (U+1f48e)
    local ruby_version="$(ruby -e 'print RUBY_VERSION')"

    BASH_POWERPROMPT_SECTIONS=("\u" "\w" "$gem_symbol  $ruby_version")
}
