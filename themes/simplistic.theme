__set_theme() {
    BASH_POWERLINE_THEME='simplistic'
    BASH_POWERLINE_COMMAND_SYMBOL="\xe2\x86\x92"
    BASH_POWERLINE_LEFT_PADDING=('' '' '' '' '')
    BASH_POWERLINE_RIGHT_PADDING=('' '' '' '' '')
    BASH_POWERLINE_BG_COLORS=('' '' '' '')
    BASH_POWERLINE_SEPARATOR_FG_COLORS=('' '' '')
    BASH_POWERLINE_SEPARATOR_BG_COLORS=('' '' '')
    BASH_POWERLINE_FG_COLORS=(113 15 74 15)
    BASH_POWERLINE_SECTIONS=("\\\u" "at" "\W" "$BASH_POWERLINE_COMMAND_SYMBOL")
    BASH_POWERLINE_SEPARATORS=(' ' ' ' ' ')

    local git_branch="$(__get_current_git_branch)"

    if [ -n "$git_branch" ]; then
        BASH_POWERLINE_BG_COLORS=("${BASH_POWERLINE_BG_COLORS[@]}" '')
        BASH_POWERLINE_SEPARATOR_FG_COLORS=(${BASH_POWERLINE_SEPARATOR_FG_COLORS[@]} '' '')
        BASH_POWERLINE_SEPARATOR_BG_COLORS=(${BASH_POWERLINE_SEPARATOR_BG_COLORS[@]} '' '')
        BASH_POWERLINE_FG_COLORS=(113 15 74 15 99 15)
        BASH_POWERLINE_SECTIONS=("${BASH_POWERLINE_SECTIONS[@]:0:3}" "on" "$git_branch" "$BASH_POWERLINE_COMMAND_SYMBOL")
        BASH_POWERLINE_SEPARATORS=("${BASH_POWERLINE_SEPARATORS[@]}" ' ' ' ')
    fi
}
